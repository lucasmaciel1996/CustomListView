<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tela1_nome"
            android:id="@+id/textView_nome"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_nome"
            android:hint="@string/tela1_hint_nome"
            android:textAllCaps="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tela1_hint_cpf"
            android:id="@+id/textView_cpf" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_cpf"
            android:hint="@string/tela1_hint_cpf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tela1_telefone"
            android:id="@+id/textView_telefone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_telefone"
            android:hint="@string/tela1_hint_telefone" />

        <TextView
            android:id="@+id/txtv_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/imv_perfil" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_foto"
            android:layout_width="260dp"
            android:layout_height="160dp"
            android:src="@drawable/foto_sombra"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:onClick="selecionarImagem" />
    </LinearLayout>

</LinearLayout>
