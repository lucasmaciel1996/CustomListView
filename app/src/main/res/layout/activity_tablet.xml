<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_main_tablet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/containet_list"
        android:layout_weidth="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weigth="1">

        <include layout="@layout/activity_smartphone_list"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/containet_inputs"
        android:layout_weidth="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weigth="2">

        <include layout="@layout/activity_smartphone_inputs"/>

    </LinearLayout>


</LinearLayout>
